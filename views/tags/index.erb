<h1>tags</h1>
<% @tags.each do |tag| %>
  <a class ="tag_a" href="/tags/<%= tag.id %>">
    <div class ="tag_div" style="background-color: <%= tag.color %>; width: 20%">
      <p><%= tag.name %></p>
      <p><%= tag.description %></p>
      <p>budget - £ <%= Helper.to_2dp( tag.budget ) %></p>
      <p>spent - £ <%= tag.spent %></p>
    </div>
  </a>
<% end %>